{
  "lock": false,
  "tasks": {
    "dev": "deno run -A npm:vite dev",
    "build": "deno run -A npm:vite build --target=es2015 --emptyOutDir --base=./ --outDir=docs --minify=false --sourcemap=true"
  },
  "compilerOptions": {
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "deno.window",
      "dom",
      "ESNext"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "exclude": [
    "dist/"
  ]
}
